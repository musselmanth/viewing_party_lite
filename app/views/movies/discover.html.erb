<h2>Discover Movies</h2>

<%= button_to 'Find Top Rated Movies', user_movies_path(@user.id), method: :get, params: {search: "top rated"}, local: true %>

<p>OR</p>

<%= form_with url: user_movies_path(@user.id), method: :get, local: true do |f| %>
    <%= f.label :search, 'Search by Movie Title' %>
    <%= f.text_field :search %>
    <%= f.submit "Find Movies" %>
<% end %>