<!DOCTYPE html>
<html>
  <head>
    <title>ViewingPartyLite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <h1>Viewing Party Lite</h1>
    <%= link_to "Home", root_path %>
    <% if flash[:alerts] %>
      <% flash[:alerts].each do |message| %>
        <h3><b><%= message %></b></h3>
      <% end %>
    <% end %>
    <%= yield %>
  </body>
</html>
