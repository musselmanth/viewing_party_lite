<div class="container">
  <h1>Admin Dashboard</h1>
  <div class="grid">
    <div class="g-col-10 g-start-2 text-start">
      <h3>Manage Users</h3>
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">user-id</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Dashboard</th>
            <th scope="col">Remove</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <th scope="row"><%= user.id %></th>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td><%= link_to "Dashboard", admin_user_path(user.id) %></td>
              <td><%= link_to "Remove User", admin_user_path(user.id), method: :delete, data: {confirm: "Are you sure you want to delete the user #{user.email}?"} %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      </ul>
    </div>
  </div>
</div>